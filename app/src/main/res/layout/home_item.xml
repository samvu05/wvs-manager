<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_height="72dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rccitem_name"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Vũ Đình Sâm"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"></TextView>
        <TextView
            android:id="@+id/tv_rccitem_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="B6TT15,KDT Văn Quán,Hà Đông,Hà Nội"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"></TextView>

        <TextView
            android:id="@+id/tv_rccitem_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="Đen 295k"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"></TextView>

        <TextView
            android:id="@+id/tv_rccitem_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"></TextView>


    </LinearLayout>

</RelativeLayout>